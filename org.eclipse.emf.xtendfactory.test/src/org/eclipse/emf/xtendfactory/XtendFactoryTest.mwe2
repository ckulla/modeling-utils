module org.eclipse.emf.xtendfactory.XtendFactoryTest

import org.eclipse.emf.mwe.utils.StandaloneSetup
import org.eclipse.emf.mwe.utils.DirectoryCleaner

var projectName = "org.eclipse.emf.xtendfactory.test"
var genModel = "platform:/resource/${projectName}/src/org/eclipse/emf/xtendfactory/XtendFactoryTest.genmodel"

Workflow {

    bean = StandaloneSetup {
        scanClassPath = true
        platformUri = ".."
    }
    
	component = DirectoryCleaner {
		directory = "test-gen"
	}

	component = org.eclipse.emf.mwe2.ecore.EcoreGenerator {
		genModel = genModel
		srcPath = "src"
	}    
	
	component = XtendEmfFactoryGenerator {		
		genModel = genModel
	}
	
}