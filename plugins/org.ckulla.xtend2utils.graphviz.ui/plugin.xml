<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.commands">
		<category
              id="org.ckulla.xtend2utils.graphviz.ui.Commands"
              name="Default Category">
        </category>
    	<command
           categoryId="org.ckulla.xtend2utils.graphviz.ui.Commands"
           id="org.ckulla.xtend2utils.graphviz.ui.commands.VisualizeEcore"
           name="Visualize with dot"/>
	</extension>

	<extension point="org.eclipse.ui.handlers">
   		<handler class="org.ckulla.xtend2utils.graphviz.ui.VisualizeEcore"
        commandId="org.ckulla.xtend2utils.graphviz.ui.commands.VisualizeEcore"/>
	</extension> 

	<extension id="add.item" point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
	        <command commandId="org.ckulla.xtend2utils.graphviz.ui.commands.VisualizeEcore">
				<visibleWhen>
   					<iterate operator="and" ifEmpty="false">
      					<adapt type="org.eclipse.core.resources.IResource">
							<test property="org.eclipse.core.resources.name" value="*.ecore"/>      					
		      			</adapt>
   					</iterate>
        		</visibleWhen>	        
	        </command>
	     </menuContribution>
	</extension> 
	     
</plugin>
