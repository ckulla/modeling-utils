module org.ckulla.xtend2utils.graphviz.EcoreToDotGeneratorTest

import org.eclipse.emf.mwe.utils.StandaloneSetup
import org.eclipse.emf.mwe.utils.DirectoryCleaner

var projectName = "org.ckulla.xtend2utils.graphviz.test"
var ecoreModel = "platform:/resource/${projectName}/src/org/ckulla/xtend2utils/graphviz/EcoreToDotGeneratorTest.ecore"

Workflow {

    bean = StandaloneSetup {
        scanClassPath = true
        platformUri = ".."
    }
    
	component = DirectoryCleaner {
		directory = "test-gen"
	}

	component = EcoreToDotGenerator {		
		ecoreModel = ecoreModel
		outputFolder = "test-gen"
	}
	
}